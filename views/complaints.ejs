<%-include('./partials/header.ejs')%> <%-include('./partials/nav.ejs')%>

<div class="mt-2">
  <% if (user && user.role === 'head') { %>
  <a href="/dashboard" class="btn btn-info btn-small rounded-pill px-3 mb-3"
    >Home</a
  >
  <% } %>

  <div
    class="card rounded shadow-lg m-auto"
    style="width: 100%; max-width: 36rem"
  >
    <div
      class="card-header bg-success text-light lead"
      style="font-weight: 500"
    >
      Log a Complaint
    </div>
    <div class="card-body">
      <span><%-include('./partials/messages.ejs')%></span>
      <form action="/addComplaint" method="post">
        <div class="form-group row">
          <label for="title" class="col-sm-4 justify-content-center"
            >Title</label
          >
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control"
              id="title"
              name="title"
              placeholder="Complaint Title"
              minlength="5"
              maxlength="100"
              autofocus
              required
            />
          </div>
        </div>
        <div class="form-group row align-center">
          <label for="description" class="col-sm-4">Category</label>
          <div class="col-sm-8">
            <textarea
              name="description"
              id="description"
              cols="30"
              rows="5"
              class="form-control"
              minlength="10"
              maxlength="300"
              placeholder="Describe your complaint here"
            ></textarea>
          </div>
        </div>
        <div class="text-center">
          <button class="btn btn-outline-success w-75 m-2">
            Submit Complaint
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container mt-4 mb-5">
  <%- include('./partials/tableComplaints.ejs') %>
</div>
<%- include('./partials/footer.ejs') %>

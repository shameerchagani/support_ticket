
<%-include('./partials/header.ejs')%>
<%-include('./partials/nav.ejs')%>

<main class="container-fluid">
  <div class="mt-2 container">
    <div class="card rounded shadow-lg m-auto" style="max-width: 480px;">
      <div class="card-header bg-success text-light">
        Update User
      </div>
      <div class="card-body">
        <span><%-include('./partials/messages.ejs')%></span>
        <form action="/users/updateUser/<%= selectedUser._id %>" method="post">
          <div class="form-group row">
            <label for="name" class="col-sm-4 justify-content-center">Full Name</label>
            <div class="col-sm-8">
              <input type="text" class="form-control"  id="name" name="name" value="<%=selectedUser.name%>" placeholder="Enter User Name" readonly required />
            </div>
          </div>
          <div class="form-group row align-center">
            <label for="email" class="col-sm-4">Email</label>
            <div class="col-sm-8">
              <input type="email" class="form-control" id="email" name="email" value="<%=selectedUser.email%>" placeholder="Enter User Email" readonly required />
            </div>
          </div>

          <div class="form-group row align-center">
            <label for="password" class="col-sm-4">Password</label>
            <div class="col-sm-8">
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter User Password" />
            </div>
          </div>
          <div class="form-group row align-center">
            <label for="password2" class="col-sm-4">Confirm</label>
            <div class="col-sm-8">
              <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirm User Password" />
            </div>
          </div>
          
          <div class="form-group row align-center">
            <label for="role" class="col-sm-4">Role</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" id="role" value="<%=selectedUser.role%>" name="role" placeholder="Enter User Role" required />
            </div>
          </div>
          <div class="text-center justify-content-between">
            <a href="/users/manageUsers" class="text-primary mx-2">Cancel</a>
            <button class="btn btn-outline-success w-50 m-2">Update User</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>    

<%-include('./partials/footer.ejs')%>